// Configuración del sensor DHT
#define DHTPIN 4        
#define DHTTYPE DHT11
DHT dht(DHTPIN, DHTTYPE);

// Configuración del sensor BH1750
BH1750 lightMeter;

// Cliente WiFi y MQTT
WiFiClientSecure espClient;
PubSubClient client(espClient);

void setup_wifi() {
  delay(10);
  Serial.println();
  Serial.print("Conectando a ");
  Serial.println(ssid);

  WiFi.begin(ssid, password);

  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }

  Serial.println("");
  Serial.println("WiFi conectado");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());
}

void reconnect() {
  // Loop hasta que la ESP32 se conecte al broker MQTT
  while (!client.connected()) {
    Serial.print("Intentando conectarse al broker MQTT...");
    String clientId = "ESP32Client-";
    clientId += String(random(0xffff), HEX);
    if (client.connect(clientId.c_str(), mqtt_username, mqtt_password)) {
      Serial.println("Conectado");
    } else {
      Serial.print("Fallo de conexión, rc=");
      Serial.print(client.state());
      Serial.println(" Intentando de nuevo en 5 segundos");
      delay(5000);
    }
  }
}

void setup() {
  Serial.begin(115200);
  dht.begin();
  
  setup_wifi();

  espClient.setCACert(root_ca);  // Configurar el certificado raíz
  client.setServer(mqtt_server, mqtt_port);  // Conectar al broker MQTT

  // Inicializar BH1750
  Wire.begin();
  if (!lightMeter.begin(BH1750::CONTINUOUS_HIGH_RES_MODE)) {
    Serial.println("Error inicializando BH1750");
    while (1);
  }
  Serial.println("BH1750 inicializado correctamente");
}

void loop() {
  if (!client.connected()) {
    reconnect();  
  }
  client.loop();

  float h = dht.readHumidity();
  float t = dht.readTemperature();
  float lux = lightMeter.readLightLevel();

  if (isnan(h) || isnan(t)) {
    Serial.println("Fallo en la lectura del sensor DHT11");
    return;
  }

  // Crear el mensaje JSON
  String payload = "{\"temperature\": ";
  payload += String(t);
  payload += ", \"humidity\": ";
  payload += String(h);
  payload += ", \"irradiance\": ";
  payload += String(lux);
  payload += "}";

  // Publicar los datos en el broker MQTT
  Serial.print("Publicando mensaje: ");
  Serial.println(payload);
  client.publish(topic, payload.c_str());

  delay(2000);  // Espera 2 segundos entre cada publicación
}
